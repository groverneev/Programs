{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build cpp by kabir",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++17",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "group": {
        "kind": "build",
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}